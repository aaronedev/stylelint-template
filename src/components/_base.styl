@import '../variables/_colors'
@import '../mixins/_effects'

// Base styles and CSS custom properties
:root
  --darker $darker
  --dark $dark
  --base $base
  --light $light
  --lighter $lighter
  --primary $primary
  --secondary $secondary

body
